<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/NotCapsButton</item>

    </style>

    <style name="main">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#A3A3A3</item>
    </style>
    <style name="ask">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
    </style>

    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="place">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="address">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#A3A3A3</item>
    </style>

    <style name="fav_name">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="NotCapsButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="pollution_type">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#606060</item>
    </style>

    <style name="pollution">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#A3A3A3</item>
    </style>

    <style name="choose_time">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="time">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
